<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="kyc_profile_image">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:contentDescription">Profile</item>
        <item name="android:src">@drawable/man_1</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">#535252</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">Name</item>
        <item name="colorControlNormal">#535252</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="kyc_view_data_next_image">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:contentDescription">Profile</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="android:layout_gravity">start</item>
    </style>

</resources>